

<%= "\e!\x38" %>
<%= I18n.t 'statistics.index.hour' %> <%= I18n.t('date.day_names').rotate[@weekday] if @weekday %>

<%= "\e!\x00" %>
<% total = 0 %>
<% 0.upto(23).each do |hour| %>
<% if @weekday %>
<% sum = @current_vendor.orders.existing.where(:paid => true, :user_id => @uids, :cost_center_id => @csids, :settlement_id => @sids).where("HOUR(DATE_ADD(finished_at, INTERVAL '#{ @current_vendor.total_utc_offset_hours }' HOUR)) = #{hour} AND WEEKDAY(DATE_ADD(finished_at, INTERVAL '#{ @current_vendor.total_utc_offset_hours }' HOUR)) = #{@weekday}").sum(:sum) %>
<% else %>
<% sum = @current_vendor.orders.existing.where(:paid => true, :user_id => @uids, :cost_center_id => @csids, :settlement_id => @sids).where("HOUR(DATE_ADD(finished_at, INTERVAL '#{ @current_vendor.total_utc_offset_hours }' HOUR)) = #{hour}").sum(:sum) %>
<% end %>
<%= "%10.10s:00  %s %7.2f\n" % [hour, @friendly_unit, sum] %>
<% total += sum %>
<% end %>
<%= "%10.10s     %s %7.2f\n" % [I18n.t(:sum), @friendly_unit, total] %>
<%= "\xc4" * 42 %>